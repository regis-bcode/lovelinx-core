{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "noEmit": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./build-tests",
    "allowImportingTsExtensions": false,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "tests/setup-dom.ts",
    "src/hooks/utils/timeLogPayload.ts",
    "src/types/time-log.ts",
    "src/components/projects/taskActionGuards.ts",
    "src/components/projects/TimeManagement.tsx"
  ]
}
